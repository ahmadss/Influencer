<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5">

    <include layout="@layout/app_bar_main" />
    <View
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/blue_600" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="contact "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>


                    <EditText
                        android:id="@+id/input_contact"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>


                    <EditText
                        android:id="@+id/input_followers"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="engagement rate"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_engagement_rate"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="avg likes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/input_avg_likes"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="avg comments"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/input_avg_comments"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit_text"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:text=""
                        android:focusable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />

    </LinearLayout>

</RelativeLayout>
